{
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
    "hooks": {
        "after:bump": [
            "rm -f *.tgz",
            "flutter pub get",
            "npx auto-changelog -v ${version} -c .auto-changelog",
            "flutter pub publish --to-archive abrevva_${version}.tgz"
        ],
        "before:github:release": "flutter pub publish --force"
    },
    "npm": {
        "skipChecks": true,
        "publish": false,
        "allowSameVersion": true
    },
    "git": {
        "commitMessage": "chore: release ${version}",
        "tagName": "${version}",
        "commitArgs": [
            "-S"
        ],
        "tagArgs": [
            "-s"
        ],
        "push": false
    },
    "github": {
        "release": true,
        "assets": [
            "*.tgz"
        ],
        "tokenRef": "BOT_GITHUB_TOKEN"
    },
    "plugins": {
        "@release-it/bumper": {
            "in": {
                "file": "./pubspec.yaml",
                "path": "version"
            },
            "out": {
                "file": "./pubspec.yaml",
                "path": "version"
            }
        },
        "@release-it/conventional-changelog": {
            "ignoreRecommendedBump": true,
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "üéâ Features"
                    },
                    {
                        "type": "fix",
                        "section": "üêõ Bug Fixes"
                    },
                    {
                        "type": "perf",
                        "section": "‚ö°Ô∏è Performance Improvements"
                    },
                    {
                        "type": "revert",
                        "section": "‚è™Ô∏è Reverts"
                    },
                    {
                        "type": "docs",
                        "section": "üìù Documentation"
                    },
                    {
                        "type": "style",
                        "section": "üé® Styles"
                    },
                    {
                        "type": "refactor",
                        "section": "üîÄ Code Refactoring"
                    },
                    {
                        "type": "test",
                        "section": "üß™ Tests"
                    },
                    {
                        "type": "build",
                        "section": "‚öôÔ∏è Build System"
                    },
                    {
                        "type": "ci",
                        "section": "üöÄ Continuous Integration"
                    }
                ]
            }
        }
    }
}
